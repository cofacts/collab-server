{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "paths": {
      "@cofacts/*": [
        "*/src",
        "*/dist"
      ],
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
